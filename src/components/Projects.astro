---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import ReactJs from "./icons/React.astro"
import Tailwind from "./icons/Tailwind.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  REACT: {
    name: "React.js",
    class: "bg-black text-white",
    icon: ReactJs,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
}
const PROJECTS = [
  {
    title: "Dashboard - A dashboard example to visualize important data",
    description:
      "this project was made with NextJS, using authentication, postgressBBDD, routing, server actions, all from next API's. Hosted in Vercel",
    link: "https://next-dashboard-65dblia2w-errizas-projects.vercel.app",
    github: "https://github.com/erriza/next-dashboard",
    image: "/projects/dashboard.PNG",
    tags: [TAGS.NEXT, TAGS.TAILWIND],    
  },
  {
    title: "IP TRACKER - A great webpage to track any IP address",
    description:
      "this project was made with React, Tailwind CSS using the ip-tracker API",
    link: "https://ip-address-tracker-erriza.netlify.app/",
    github: "https://github.com/erriza/Ip-address-tracker",
    image: "/projects/IpTracker.PNG",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Keeper App - A great webpage to remember your everyday tasks",
    description:
      "Keeper App, similar to Google App functionality made with React as WebBootCamp challenge",
    link: "https://erriza.github.io/KeeperNotes/",
    image: "/projects/KeeperCaptura.PNG",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Advice App - A great webpage generate dayli advices for motivate you",
    description:
      "This app uses an API to give a random advice, developed with React as a challenge for FrontMentor",
    link: "https://erriza.github.io/advice-generator-app/",
    image: "/projects/adviceCaptura.PNG",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
  {
    title: "Patrimonio Select - Single Page Application focusing on UI",
    description:
      "This is a SPA using react/vite - tailwind AceternityUI and FramerMotion, mostly to apply UI experience",
    link: "https://patrimonio-select.netlify.app/",
    image: "/projects/PatrimonioSelect.PNG",
    tags: [TAGS.REACT, TAGS.TAILWIND],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
          {title}
        </h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          loading="lazy"
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla del proyecto ${image}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Ver c√≥digo fuente
            </LinkButton>
          )}
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Ir al sitio web
          </LinkButton>
        </footer>
      </article>
    ))
  }
</div>
